#include "Student.h"

using namespace std;

Student::Student(bool user) {
  if (user == true) {
    //Input prompt student details
    first = new string;
    cout << "First name?" << endl;
    cin >> first;
    last = new string;
    cout << "Last name?" << endl;
    cin >> last;
    id = 0;
    cout << "ID Number?" << endl;
    cin >> id;
    gpa = 0;
    cout << "Grade Point Average?" << endl;
    cin >> gpa;
  }
}

Student::~Student() {
  delete[] first;
  delete[] last;
}

char* Student::getFirst() {
  return first;
}

char* Student::getLast() {
  return last;
}

int Student::getID() {
  return id;
}

float Student::getGPA() {
  return gpa;
}

void Student::setFirst(char* newFirst) {
  first = new string;
  strcpy(first, newFirst);
}

void Student::setLast(char* newLast) {
  last = new string;
  strcpy(last, newLast);
}

void Student::setID(int newID) {
  id = newID;
}

void Student::setGPA(float newGPA) {
  gpa = newGPA;
}
